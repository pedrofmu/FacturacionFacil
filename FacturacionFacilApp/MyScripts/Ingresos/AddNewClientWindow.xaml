<Window x:Class="FacturacionFacilApp.MyScripts.Ingresos.AddNewClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FacturacionFacilApp.MyScripts.Ingresos"
        mc:Ignorable="d"
        Title="AddNewClientWindow" Height="300" Width="200">
    <Grid>
        <TextBox Name="nombre_txt_" HorizontalAlignment="Center" Margin="0,22,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" Width="120" FontStyle="Italic" Opacity="0.5" />
        <TextBox Name="nif_txt_" HorizontalAlignment="Center" Margin="0,62,0,0" TextWrapping="Wrap" Text="NIF" VerticalAlignment="Top" Width="120" FontStyle="Italic" Opacity="0.5" />
        <TextBox Name="direccion_txt_" HorizontalAlignment="Center" Margin="0,113,0,0" TextWrapping="Wrap" Text="Direccion" VerticalAlignment="Top" Width="120" FontStyle="Italic" Opacity="0.5" />
        <TextBox Name="correo_txt_" HorizontalAlignment="Center" Margin="0,169,0,0" TextWrapping="Wrap" Text="Correo" VerticalAlignment="Top" Width="120" FontStyle="Italic" Opacity="0.5" />
        <Button Content="Crear" HorizontalAlignment="Center" Margin="0,222,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
    </Grid>
</Window>
