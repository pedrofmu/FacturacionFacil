<Window x:Class="FacturacionFacilApp.MyScripts.Ingresos.FacturaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FacturacionFacilApp.MyScripts.Ingresos"
        mc:Ignorable="d"
        Title="FacturaWindow" Height="700" Width="500">
    <Grid>
        <ComboBox Name="clients_dropdown_" HorizontalAlignment="Left" Margin="55,154,0,0" VerticalAlignment="Top" Width="120" />
        <Label Name="clients_txt_" Content="Cliente" HorizontalAlignment="Left" Margin="55,129,0,0" VerticalAlignment="Top" Width="120" Height="25"/>
        <Button Name="new_client_btn_" Content="Nuevo cliente" HorizontalAlignment="Left" Margin="55,191,0,0" VerticalAlignment="Top" Click="OnNewClientIsClicked"/>
        <TextBox Name="dinero_txt_" HorizontalAlignment="Left" Margin="55,256,0,0" TextWrapping="Wrap" Text="Dinero" VerticalAlignment="Top" Width="120"/>
        <Button Name="guardad_factura_btn_" Content="Guardad" HorizontalAlignment="Left" Margin="55,342,0,0" VerticalAlignment="Top" Width="120" Click="guardad_factura_btn__Click"/>
    </Grid>
</Window>
